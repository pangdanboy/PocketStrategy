{"ast":null,"code":"import Banner from './../components/Banner';\nimport Content from './../components/Content';\nimport HomeStrategy from '../components/HomeStrategy';\nimport Panel from './../components/Panel';\nimport Notice from './../components/Notice';\nexport default {\n  // eslint-disable-next-line vue/multi-word-component-names\n  name: 'Home',\n  data: function () {\n    return {\n      mySelfTop: 0,\n      homeAtlas: {},\n      articleNumber: ''\n    };\n  },\n  components: {\n    Banner,\n    Content,\n    HomeStrategy,\n    Panel,\n    Notice\n  },\n  computed: {\n    // 监听vuex中页面滚动距离数据的变化\n    scrollTop() {\n      return this.$store.state.currentScrollTop;\n    }\n\n  },\n\n  mounted() {\n    // 刷新iscroll\n    this.refreshScroll(); // 如果当前用户已经登录，修改用户状态\n\n    if (localStorage.userToken) {\n      this.$store.commit('changeCurrentUser', true);\n    } else {\n      this.$store.commit('changeCurrentUser', false);\n    } // 获取主页攻略文章数据(开始只展示六条，以后每次都获取六条)\n\n\n    this.$axios.get('articles/getArticle').then(res => {\n      console.log(res.data);\n      this.homeAtlas = res.data;\n    }).catch(err => {\n      console.log(err);\n    });\n  },\n\n  methods: {\n    // 刷新iscroll方法，需要传递给子组件HomeAtlas\n    refreshScroll() {\n      // 刷新iscroll\n      this.$emit('refreshScroll');\n    },\n\n    // 查看更多文章方法\n    checkMore() {}\n\n  },\n  watch: {\n    // 监听获取到的页面滚动距离数据的变化\n    scrollTop() {\n      // 如果滚动距离大于banner加上内容头部的高度，这时开始改变个人面板的top值\n      if (this.$store.state.currentScrollTop >= window.innerHeight + 65) {\n        // 如果是向下滚动，且个人面板已经到底，就固定个人面板(通过不断改变个人面板的top值实现)\n        if (this.$store.state.scrollDirection === 1 && this.mySelfTop >= 1000) {\n          this.mySelfTop = 1000;\n        } else {\n          // 如果是向上滚动，且个人面板已经脱离底部，就设置个人面板不随网页滚动(通过不断改变个人面板的top值实现)\n          this.mySelfTop = this.$store.state.currentScrollTop - window.innerHeight;\n        }\n      } else {\n        this.mySelfTop = 0;\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAoCA;AACA;AACA;AACA;AACA;AACA;EACA;EACAA,YAFA;EAGAC;IACA;MACAC,YADA;MAEAC,aAFA;MAGAC;IAHA;EAKA,CATA;EAUAC;IACAC,MADA;IAEAC,OAFA;IAGAC,YAHA;IAIAC,KAJA;IAKAC;EALA,CAVA;EAiBAC;IACA;IACAC;MACA;IACA;;EAJA,CAjBA;;EAuBAC;IACA;IACA,qBAFA,CAGA;;IACA;MACA;IACA,CAFA,MAEA;MACA;IACA,CARA,CASA;;;IACA;MACAC;MACA;IACA,CAHA,EAGAC,KAHA,CAGAC;MACAF;IACA,CALA;EAMA,CAvCA;;EAwCAG;IACA;IACAC;MACA;MACA;IACA,CALA;;IAMA;IACAC,aACA;;EARA,CAxCA;EAkDAC;IACA;IACAR;MACA;MACA;QACA;QACA;UACA;QACA,CAFA,MAEA;UAAA;UACA;QACA;MACA,CAPA,MAOA;QACA;MACA;IACA;;EAdA;AAlDA","names":["name","data","mySelfTop","homeAtlas","articleNumber","components","Banner","Content","HomeStrategy","Panel","Notice","computed","scrollTop","mounted","console","catch","err","methods","refreshScroll","checkMore","watch"],"sourceRoot":"src/views","sources":["Home.vue"],"sourcesContent":["<template>\r\n  <div id=\"home\">\r\n    <Banner>\r\n      <template #title>\r\n        <p class=\"title\">口袋觉醒个人攻略</p>\r\n      </template>\r\n    </Banner>\r\n    <Content>\r\n      <!--填充子组件留下的插槽-->\r\n      <template #content-in>\r\n        <div class=\"content-in\" ref=\"content\">\r\n          <div class=\"content-in-top\">\r\n            <Notice></Notice>\r\n          </div>\r\n          <div class=\"content-in-bottom\">\r\n            <div class=\"content-in-left\">\r\n              <!--攻略具体内容展示界面-->\r\n              <router-link :to=\"`/Strategy/?articleID=${item.articleID}`\" v-for=\"(item, index) in homeAtlas\" :key=\"item.articleID\" tag=\"div\">\r\n                <HomeStrategy :index=\"index\" :item=\"item\" @refreshScroll=\"refreshScroll\"></HomeStrategy>\r\n              </router-link>\r\n              <!--加载更多文章按钮-->\r\n              <div class=\"checkMore\">\r\n                <button @click.prevent=\"checkMore\">查看更多攻略>></button>\r\n              </div>\r\n            </div>\r\n            <div class=\"content-in-right\" ref=\"myself\" :style=\"{top: mySelfTop + 'px'}\">\r\n              <Panel></Panel>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </template>\r\n    </Content>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Banner from './../components/Banner'\r\nimport Content from './../components/Content'\r\nimport HomeStrategy from '../components/HomeStrategy'\r\nimport Panel from './../components/Panel'\r\nimport Notice from './../components/Notice'\r\nexport default {\r\n  // eslint-disable-next-line vue/multi-word-component-names\r\n  name: 'Home',\r\n  data: function () {\r\n    return {\r\n      mySelfTop: 0,\r\n      homeAtlas: {},\r\n      articleNumber: ''\r\n    }\r\n  },\r\n  components: {\r\n    Banner,\r\n    Content,\r\n    HomeStrategy,\r\n    Panel,\r\n    Notice\r\n  },\r\n  computed: {\r\n    // 监听vuex中页面滚动距离数据的变化\r\n    scrollTop () {\r\n      return this.$store.state.currentScrollTop\r\n    }\r\n  },\r\n  mounted () {\r\n    // 刷新iscroll\r\n    this.refreshScroll()\r\n    // 如果当前用户已经登录，修改用户状态\r\n    if (localStorage.userToken) {\r\n      this.$store.commit('changeCurrentUser', true)\r\n    } else {\r\n      this.$store.commit('changeCurrentUser', false)\r\n    }\r\n    // 获取主页攻略文章数据(开始只展示六条，以后每次都获取六条)\r\n    this.$axios.get('articles/getArticle').then(res => {\r\n      console.log(res.data)\r\n      this.homeAtlas = res.data\r\n    }).catch(err => {\r\n      console.log(err)\r\n    })\r\n  },\r\n  methods: {\r\n    // 刷新iscroll方法，需要传递给子组件HomeAtlas\r\n    refreshScroll () {\r\n      // 刷新iscroll\r\n      this.$emit('refreshScroll')\r\n    },\r\n    // 查看更多文章方法\r\n    checkMore () {\r\n    }\r\n  },\r\n  watch: {\r\n    // 监听获取到的页面滚动距离数据的变化\r\n    scrollTop () {\r\n      // 如果滚动距离大于banner加上内容头部的高度，这时开始改变个人面板的top值\r\n      if (this.$store.state.currentScrollTop >= window.innerHeight + 65) {\r\n        // 如果是向下滚动，且个人面板已经到底，就固定个人面板(通过不断改变个人面板的top值实现)\r\n        if (this.$store.state.scrollDirection === 1 && this.mySelfTop >= 1000) {\r\n          this.mySelfTop = 1000\r\n        } else { // 如果是向上滚动，且个人面板已经脱离底部，就设置个人面板不随网页滚动(通过不断改变个人面板的top值实现)\r\n          this.mySelfTop = this.$store.state.currentScrollTop - window.innerHeight\r\n        }\r\n      } else {\r\n        this.mySelfTop = 0\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped lang=\"scss\">\r\n  #banner{\r\n  width: 100%;\r\n  height: 100vh;\r\n  background: url('./../assets/images/home.jpg') no-repeat;\r\n  background-size: cover;\r\n  position: relative;\r\n  .title{\r\n    width: 0px;\r\n    font-size: 32px;\r\n    color: rgba(255,255,255,1);\r\n    position: absolute;\r\n    text-align: center;\r\n    left: 50%;\r\n    top: 50%;\r\n    transform: translate(-50%, -50%);\r\n    white-space: nowrap;\r\n    overflow: hidden;\r\n    animation: showText 4s steps(8) 0s forwards;\r\n  }\r\n  @keyframes showText {\r\n    from{\r\n      width: 0;\r\n    }\r\n    to{\r\n      width: 257px;\r\n    }\r\n  }\r\n}\r\n  .content-in{\r\n    width: 1200px;\r\n    margin: 0 auto;\r\n  .content-in-top{\r\n    width: 1200px;\r\n    height: 65px;\r\n    background-color: #ffffff;\r\n    border-radius: 20px;\r\n    margin-bottom: 20px;\r\n    overflow: hidden;\r\n  }\r\n  .content-in-bottom{\r\n    display: flex;\r\n    justify-content: space-between;\r\n    position: relative;\r\n    .content-in-left{\r\n      width: 850px;\r\n      .checkMore{\r\n        margin: 0 auto;\r\n        width: 150px;\r\n        height: 40px;\r\n        background-color: rgba(255, 255, 255, 0.5);\r\n        border-radius: 10px;\r\n        overflow: hidden;\r\n        margin-bottom: 20px;\r\n        button{\r\n          width: 100%;\r\n          height: 100%;\r\n          border: none;\r\n          cursor: pointer;\r\n        }\r\n      }\r\n    }\r\n    .content-in-right{\r\n      width: 300px;\r\n      height: 600px;\r\n      background-color: rgba(255, 255, 255, 0.5);\r\n      position: absolute;\r\n      right: 0;\r\n      border-radius: 20px;\r\n      overflow: hidden;\r\n    }\r\n  }\r\n}\r\n</style>\r\n"]},"metadata":{},"sourceType":"module"}